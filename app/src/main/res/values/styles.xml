<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!-- 首页顶部tab导航 -->
    <style name="IndexTab" parent="Widget.Design.TabLayout" >
        <item name="tabIndicatorColor">@color/bottom_nav_txt_color_select</item>
        <item name="tabTextColor">@color/TextColor</item>
        <item name="tabSelectedTextColor">@color/bottom_nav_txt_color_select</item>
        <item name="tabBackground">@color/background_color</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@drawable/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <drawable name="transparent">#00000000</drawable>
</resources>
